# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/email_db

# Google OAuth Configuration (Gmail + Calendar)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3015/api/accounts/oauth/gmail/callback

# Google Cloud Pub/Sub (for Gmail webhooks)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PUBSUB_TOPIC=projects/your-project-id/topics/gmail-notifications

# Microsoft Azure Configuration (Exchange + Outlook)
AZURE_TENANT_ID=common
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_REDIRECT_URI=http://localhost:3015/api/accounts/oauth/exchange/callback

# Server Configuration
PORT=3015
NODE_ENV=development

# Redis Configuration (for caching and job queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# LLM Configuration
LLM_CONFIG=./llm-config.json

# Security
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret

# Feature Flags
ENABLE_GMAIL=true
ENABLE_EXCHANGE=true
ENABLE_IMAP=true
ENABLE_CALENDAR=true
ENABLE_WEBHOOKS=true

# Sync Configuration
SYNC_INTERVAL_MINUTES=5
WEBHOOK_VERIFICATION_TOKEN=your-webhook-token
