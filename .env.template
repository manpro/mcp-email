# PostgreSQL Database Connections
# Copy this file to .env and fill in your actual database URLs

# Finance database connection
PG_FINANCE_URL=postgresql://username:password@host:port/finance_db

# CRM database connection  
PG_CRM_URL=postgresql://username:password@host:port/crm_db

# Internal database connection
PG_INTERNAL_URL=postgresql://username:password@host:port/internal_db

# Example format:
# PG_FINANCE_URL=postgresql://postgres:mypassword@localhost:5432/finance
# PG_CRM_URL=postgresql://postgres:mypassword@192.168.1.100:5432/crm
# PG_INTERNAL_URL=postgresql://postgres:mypassword@db.company.com:5432/internal