# PostgreSQL
POSTGRES_USER=rss
POSTGRES_PASSWORD=changeme
POSTGRES_DB=rssintel

# FreshRSS
FRESHRSS_BASE_URL=http://freshrss:8080
FRESHRSS_ADMIN_USER=admin
FRESHRSS_ADMIN_PASS=adminadmin
FRESHRSS_API_USER=ai
FRESHRSS_API_PASS=strongpassword

# Backend
BACKEND_PORT=8000
SCORING_HALF_LIFE_HOURS=36
SCORING_STAR_THRESHOLD=80
SCORING_INTEREST_THRESHOLD=60
SCHEDULER_ENABLED=true

# Image Proxy
IMAGE_PROXY_CACHE_DIR=/data/image-cache
IMAGE_PROXY_MAX_BYTES=5242880
IMAGE_PROXY_TIMEOUT_SEC=8
IMAGE_PROXY_CONNECT_SEC=3
IMAGE_PROXY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) Chrome/119
IMAGE_PROXY_SEND_REFERER=true
IMAGE_MIN_WIDTH=320
IMAGE_MIN_HEIGHT=180
IMAGE_ASPECT_MIN=0.4
IMAGE_ASPECT_MAX=3.0
IMAGE_ENABLE_REVALIDATION=true
IMAGE_REVALIDATE_AFTER_HOURS=168
IMAGE_PLAYWRIGHT_ENABLED=true
IMAGE_PLAYWRIGHT_MAX_CONCURRENCY=1
IMAGE_DOMAIN_RULES_PATH=/app/config/image_rules.yml

# Content extraction
CONTENT_EXTRACTION_RATE_LIMIT=2

# OpenAI (for RAG/Q&A)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Web
WEB_PORT=3000